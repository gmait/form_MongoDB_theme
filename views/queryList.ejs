<%- include('header'); -%>

    <header>
        <div class="container-fluid mb-2 " style="background-color: rgb(190, 172, 209);">
            <div class="col-sm-8 mx-auto text-center p-1">

                <p class="display-6">This is the testing page for Query list</p>
            </div>
        </div>
    </header>

    <main>
        <div class="container-fluid">
            <h4 style="font-weight: 600; color: rgb(94, 37, 121)">
                <%= title %>
            </h4>
            <hr>
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Enquiry Type</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>phone</th>
                        <th>orderNumber(if any)</th>
                        <th>message</th>
                        <th>Query Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% result.forEach(d=> { %>
                        <tr>
                            <td>
                                <%= d._id %>
                            </td>
                            <td>
                                <%= d.enquiryType %>
                            </td>
                            <td>
                                <%= d.name %>
                            </td>
                            <td>
                                <%= d.email %>
                            </td>
                            <td>
                                <%= d.phone %>
                            </td>
                            <td>
                                <%= d.orderNumber %>
                            </td>
                            <td>
                                <%= d.message %>
                            </td>
                            <td>
                                <%= d.created_date_formatted %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <br>

            <a href="/retrieveQuery">return to the Retrieve Query Page</a>

        </div> <br>
    </main>

    <%- include('footer'); -%>