<%- include('header'); -%>

    <header>
        <div class="container-fluid mb-2" style="background-color: rgb(190, 172, 209);">
            <div class="col-sm-8 mx-auto text-center p-2">

            </div>
        </div>
    </header>


    <main>
        <div class="container">
            <h3>
                <%= title %>
            </h3>

            <div class=" box-top">
                <p> Dear <strong>
                        <%= newContact.name %>,
                    </strong>
                <p>We have received your enquiry and we will get back to you within 3 business days.</p>
                <p>you have left your contact details as below: </p>
                <p>Email address:
                    <%= newContact.email %>
                </p>
                <p>Phone:
                    <%= newContact.phone %>
                </p>
                <p><i>You created this query on <%= newContact.created_date_formatted %>
                </p></i>
                </p>
            </div>

            <hr>

            <a href="/contact">Click here to return to the contact form</a>

        </div>
    </main>
    <%- include('footer'); -%>